@model FilmListViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            @{ var i = 0; }
            @foreach (var item in Model.Filmler)
            {
                { i += 1; }
                <div class="row">
                    <div class="col-12 d-flex align-items-center" style="border: solid; border-color: #FEBF5E; padding: 5px;">
                        <div class="col-1">
                            <p><font face="trajan" color="black" size="10"><b>@i.</b></font></p>
                        </div>
                        <div class="col-4">
                            <img src="~/img/film/@item.Resim" alt="..." class="img-thumbnail">
                        </div>
                        <div class="col-7">
                            <p style="color:black;">@localizer["Film"]: <a style="color:black;" href="/populer/detail/@item.FilmID">@item.FilmAdi</a></p>
                            <p style="color:black;">@localizer["Görüntülenme Sayısı"]: @item.GoruntulenmeSayisi</p>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>