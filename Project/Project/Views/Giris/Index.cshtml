
@model Giris

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-3" style="background-color:white;padding:10px;">
            <div class="login-form">
                <form asp-controller="Giris" asp-action="Index" method="POST">
                    <div class="text-warning" asp-validation-summary="All">
                        <h2 class="text-center" style="color:black;">@localizer["Giriş Yap"]</h2>
                        <div class="form-group">
                            <input asp-for="Email" type="text" class="form-control" placeholder="E-Mail Adresi" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="Sifre" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">@localizer["Giriş Yap"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>